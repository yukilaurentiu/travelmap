<header class="header navbar-light fixed-top"
  data-controller="navbar"
  data-action="scroll@window->navbar#updateNavbar"
>

    <nav class="box">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "logo-peach.png", id: "logo-navbar" %>
      <% end %>
    </nav>

    <div class="searchbar box">
      <%= form_with url: posts_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query, params[:query],
        class: "form-control", placeholder: "Search city, ..."%>
        <%= button_tag icon('fa-solid', 'magnifying-glass'), class: "btn-search-hp" %>

      <% end %>
    </div>
    <%# <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button> %>

    <nav class="nav box" id="navbarSupportedContent">
      <ul class="navbar-list">
        <% if user_signed_in? %>
          <li class="nav-item">
            <li class="nav-item nav-item-hp" title="Posts Worldwide">
              <%= link_to icon('fa-solid', 'earth-europe'), posts_path, class: "nav-link" %>
            </li>
            <li class="nav-item nav-item-hp" title="New Post">
              <%= link_to icon('fa-solid', 'pen'), new_post_path, class: "nav-link" %>
            </li>
            <li class="nav-item nav-item-hp" title="My Map">
              <%= link_to icon('fa-regular', 'map'), profile_path, class: "nav-link" %>
            </li>
            <li class="nav-item nav-item-hp" title="My Wishlist">
              <%= link_to icon('fa-solid', 'bookmark'), wishlists_path, class: "nav-link" %>
            </li>
            <li class="nav-item nav-item-hp" title="Events">
              <%= link_to icon('fa-regular', 'calendar'), events_path, class: "nav-link" %>
            </li>
          </li>
          <li class="nav-item dropdown">
            <%= render(partial: "shared/avatar_profile") %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item", id: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </nav>
  
</header>

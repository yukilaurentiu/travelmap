
<% if current_user.avatar.present? %>
  <%= image_tag(url_for(current_user.avatar), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup' => true, 'aria-expanded' => false) %>
<% else %>
  <%= image_tag "avatar01.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
<% end %>

<div class="d-flex">
  <div id="map-sticky" style="min-width: 60%; height: 44rem;"
      data-controller="index-map"
      data-index-map-markers-value="<%= @markers.to_json %>"
      data-index-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="mt-4" style="min-width: 40%">
    <div>
      <h1 class="text-center title-font mb-5" >My wishlist ðŸ“Œ</h1>
    </div>
    <div class="row justify-content-center" style="width: 100%">
      <% current_user.bookmarks.each do |bookmark| %>
       <div class="col-5">
        <div class="d-flex justify-content-center">
          <div class="card rounded">
              <div class="p-2">
                <% if bookmark.post.photos.present? %>
                  <% bookmark.post.photos.each do |photo| %>
                    <%= image_tag(url_for(photo), class: "card-image") %>
                  <% end %>
                <% else %>
                  <%= image_tag "/assets/sample_img.jpg", class: "card-image" %>
                <% end %>
              </div>
              <div class="card-infos d-flex justify-content-between align-items-center">
                <div>
                  <%= link_to post_path(bookmark.post) do %>
                    <h2><%= bookmark.post.title %></h2>
                    <h3 class="mb-1 category"><%= bookmark.post.category %></h3>
                  <% end %>
                </div>
                <div>
                  <%= render 'shared/avatar', post: bookmark.post %>
                </div>
              </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

